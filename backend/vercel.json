{
    "version": 2,
    "builds": [
      {
        "src": "main.py",
        "use": "@vercel/python"
      }
    ],
    "rewrites": [
          { "source": "/api/(.*)", "destination": "/api/main:app/$1" }
        ],
        "headers": [
          {
            "source": "/api/(.*)",
            "headers": [
              { "key": "Access-Control-Allow-Origin", "value": "https://conversational-crypto-web-chat.vercel.app" },
              { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
              { "key": "Access-Control-Allow-Headers", "value": "*" },
              { "key": "Access-Control-Allow-Credentials", "value": "true" }
            ]
          }
        ]
  } 