{
    "version": 2,
    "builds": [
      {
        "src": "main.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "main:app"
        },
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                { "key": "Access-Control-Allow-Origin", "value": "*" },  // Replace with your frontend origin in production!
                { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
                { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }, // Customize headers as needed
                { "key": "Access-Control-Allow-Credentials", "value": "true" }
            ]
        }
    ]
  } 