{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "requirements": "backend/requirements.txt"
      }
    },
    {
      "src": "frontend",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
     {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ]
}